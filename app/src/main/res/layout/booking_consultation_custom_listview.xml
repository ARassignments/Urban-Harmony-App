<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingTop="20dp"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/listItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingHorizontal="20dp"
        style="@style/customButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/bookingDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="22sp"
                android:layout_weight="1"
                style="@style/detailBookSubTitle"/>

            <TextView
                android:id="@+id/bookingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: June 12, 2022"
                android:textSize="12sp"
                android:layout_gravity="bottom"
                style="@style/detailBookAuther"/>

        </LinearLayout>

        <TextView
            android:id="@+id/bookingSlots"
            style="@style/listItemBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Timing Slots: 10:00PM - 11:00PM"
            android:textSize="12sp"
            android:paddingHorizontal="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/pill_shape"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                style="@style/customButton">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/boy_14"
                    android:scaleType="fitCenter"
                    android:backgroundTint="@color/transparent"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    style="@style/authTitle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Interior Designer"
                    style="@style/dashboardBestsellerAuther"/>

            </LinearLayout>

            <Button
                android:id="@+id/bookingStatus"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Pending"
                android:textSize="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="0dp"
                android:paddingHorizontal="0dp"
                android:gravity="center"
                style="@style/flatButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/viewDetailsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Details"
                style="@style/flatButton"/>

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                style="@style/ghostButton"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>