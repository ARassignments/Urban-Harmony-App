<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingTop="20dp"
    style="@style/ScreenBg">

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingHorizontal="20dp"
        style="@style/customButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#A8HJJBNB"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="22sp"
                android:layout_weight="1"
                style="@style/detailBookSubTitle"/>

            <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: June 12, 2022"
                android:textSize="12sp"
                android:layout_gravity="bottom"
                style="@style/detailBookAuther"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/pImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo"
                    android:scaleType="centerCrop"
                    style="@style/listItemBg"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orderAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:fontFamily="@font/urbanist_bold"
                    android:textSize="23sp"
                    android:textColor="@color/accent_50"
                    style="@style/detailBookSubTitle"/>

                <TextView
                    android:id="@+id/orderItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Items: 0"
                    style="@style/dashboardBestsellerAuther"/>

            </LinearLayout>

            <Button
                android:id="@+id/orderStatus"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="In Delivery"
                android:textSize="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="0dp"
                android:paddingHorizontal="0dp"
                android:gravity="center"
                style="@style/flatButton"/>

            <Button
                android:id="@+id/designerLabel"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Designer"
                android:textSize="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="0dp"
                android:paddingHorizontal="0dp"
                android:gravity="center"
                android:visibility="gone"
                style="@style/flatButtonDisabled"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/userContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start">

                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="23dp"
                        android:background="@drawable/line_vertical"
                        style="@style/listImageBg"/>

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:text="Ordered By"
                        android:textSize="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="0dp"
                        android:paddingHorizontal="0dp"
                        android:gravity="center"
                        style="@style/flatButton"/>

                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="23dp"
                        android:background="@drawable/line_vertical"
                        style="@style/listImageBg"/>

                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/orderBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Track Order"
                    android:textStyle="normal"
                    android:fontFamily="@font/urbanist_medium"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/pill_shape"
                    android:backgroundTint="@color/primary_50"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="14dp"
                    android:textAllCaps="false"
                    android:elevation="0dp"
                    android:layout_gravity="center"
                    style="@style/searchText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    style="@style/customButton">

                    <ImageView
                        android:id="@+id/userImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/boy_14"
                        android:scaleType="fitCenter"
                        android:backgroundTint="@color/transparent"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        style="@style/authTitle"/>

                </LinearLayout>

                <Button
                    android:id="@+id/userRole"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="User"
                    android:textSize="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="0dp"
                    android:paddingHorizontal="0dp"
                    android:gravity="center"
                    android:visibility="visible"
                    style="@style/flatButtonDisabled"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/statusBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Packaging"
                style="@style/flatButton"/>

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel Order"
                style="@style/ghostButton"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>