<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/ScreenBg"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center"
        style="@style/customButton">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            style="@style/customButton">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/boy_14"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/transparent"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designer Name"
                android:ellipsize="end"
                android:maxLines="1"
                style="@style/dashboardBestsellerTitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interior Designer"
                android:layout_marginBottom="3dp"
                style="@style/dashboardBestsellerAuther"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star"
                    android:layout_marginRight="4dp"
                    app:tint="@color/accent_50"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star"
                    android:layout_marginRight="4dp"
                    app:tint="@color/accent_50"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star"
                    android:layout_marginRight="4dp"
                    app:tint="@color/accent_50"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star"
                    android:layout_marginRight="4dp"
                    app:tint="@color/accent_50"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star_outline"
                    app:tint="@color/accent_50"/>

            </LinearLayout>

            <TextView
                android:id="@+id/designsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,000+ Designs"
                android:textSize="10sp"
                android:layout_marginTop="3dp"
                style="@style/dashboardBestsellerAuther"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>